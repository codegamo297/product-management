mixin form-change-multi(path, page)
    form(
        action=path
        method="POST"
        form-change-multi
    )
        .d-flex.align-items-start 
            .mb-3 
                select.form-select(name="type")
                    option(disabled selected) Chọn hành động
                    if (page === "pageDustbin")
                        option(value="restore-all") Khôi phục tất cả
                        option(value="delete-all") Xóa vĩnh viễn tất cả
                    else
                        option(value="active") Hoạt động
                        option(value="inactive") Dừng hoạt động
                        option(value="delete-all") Xóa tất cả
                        option(value="change-position") Thay đổi vị trí
            .mb-3
                input.form-control.d-none(
                    type="text"
                    name="ids"
                    value=""
                )
            button.btn.btn-primary.ms-3(type="submit") Áp dụng