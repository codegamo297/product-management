extends ../../layouts/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
include ../../mixins/moment.pug

block main
    if (role.permissions.includes("products_view"))
        +alert-success(2000)
        +alert-error(2000)

        h1 Danh sách sản phẩm

        .card.mb-3
            .card-header Bộ lọc và tìm kiếm 
            .card-body.row
                .col-6
                    +filter-status(filterStatus)
                .col-6 
                    +search(keyword)

        .card.mb-3 
            .card-header Sắp xếp 
            .card-body 
                .row
                    .col-4 
                        +sort("pageProduct")
        
        .card.mb-3
            .card-header Danh sách
            .card-body
                .row
                    .col-8
                        if (role.permissions.includes("products_edit"))
                            +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`, "pageProduct")
                    .col-4
                        if (role.permissions.includes("products_create"))
                            a.btn.btn-outline-success(
                                href=`${prefixAdmin}/products/create`
                            ) + Thêm mới
                
                table.table.table-hover.table-sm(
                    checkbox-multi
                )
                    thead
                        tr
                            th
                                input(type="checkbox" name="checkAll") 
                                label.ms-1 Chọn tất cả
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Vị trí
                            th Trạng thái
                            th Người tạo
                            th Người cập nhật
                            th Hành động
                    tbody
                        each item, index in products
                            tr
                                td
                                    input(type="checkbox" name="id" value=item.id)
                                td #{pagination.limitItem * (pagination.currentPage - 1) + (index + 1)}
                                td
                                    img(
                                        src=item.thumbnail
                                        alt=item.title
                                        width="100px"
                                        height="100px"
                                        object-fit="contain"
                                    )
                                td #{item.title}
                                td #{item.price}$
                                td
                                    input(
                                        type="number"
                                        value=item.position
                                        style="width: 60px"
                                        min="1"
                                        name="position"
                                    )
                                td  
                                    if (role.permissions.includes("products_edit"))
                                        if (item.status === "active")
                                            a.badge.text-bg-success.text-decoration-none(
                                                href="javascript:;"
                                                data-id=item.id
                                                data-status=item.status
                                                button-change-status
                                            ) Hoạt động
                                        else
                                            a.badge.text-bg-danger.text-decoration-none(
                                                href="javascript:;"
                                                data-id=item.id
                                                data-status=item.status
                                                button-change-status
                                            ) Dừng hoạt động
                                    else
                                        if (item.status === "active")
                                            a.badge.text-bg-success.text-decoration-none(
                                                href="javascript:;"
                                            ) Hoạt động
                                        else
                                            a.badge.text-bg-danger.text-decoration-none(
                                                href="javascript:;"
                                            ) Dừng hoạt động
                                td
                                    if (item.accountFullName)
                                        p #{item.accountFullName}
                                        p 
                                            +formatDateTime(item.createdBy.createdAt)
                                td
                                    - const updatedBy = item.updatedBy.slice(-1)[0]
                                    if (updatedBy)
                                        p #{updatedBy.accountFullName}
                                        p 
                                            +formatDateTime(updatedBy.updatedAt)
                                td
                                    a.btn.btn-info.btn-sm(
                                        href=`${prefixAdmin}/products/detail/${item.id}`
                                    ) Chi tiết

                                    if (role.permissions.includes("products_edit"))
                                        a.btn.btn-warning.btn-sm.ms-2(
                                            href=`${prefixAdmin}/products/edit/${item.id}`
                                        ) Sửa
                                    if (role.permissions.includes("products_delete"))
                                        button.btn.btn-danger.btn-sm.ms-2(
                                            btn-delete
                                            data-id=item.id
                                        ) Xóa
        
        +pagination(pagination) 

        form#form-change-status(
            action="",
            method="POST"
            data-path=`${prefixAdmin}/products/change-status`
        ) 

        form#form-delete-item(
            action="",
            method="POST"
            data-path=`${prefixAdmin}/products/delete`
            title="Bạn có muốn xóa sản phẩm này?"
        ) 

        script(src="/admin/js/products.js")
    else 
        h1 Bạn không có quyền truy cập