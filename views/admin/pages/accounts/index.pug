extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/form-change-multi.pug

block main 
    h1.mb-4 Danh sách tài khoản
    
    +alert-success(3000)
    +alert-error(3000)

    .card.mb-3
        .card-header Bộ lọc và tìm kiếm 
        .card-body.row
            .col-6
                +filter-status(filterStatus)
            .col-6 
                +search(keyword)

    .card.mb-3 
        .card-header Danh sách 
        .card-body 
            .row
                .col-8
                    +form-change-multi(`${prefixAdmin}/accounts/change-multi?_method=PATCH`, "pageAccount")
                .col-4
                    a.btn.btn-outline-success(
                        href=`${prefixAdmin}/accounts/create`
                    ) + Thêm mới

            table.table.table-hover.table-sm.mt-3(checkbox-multi)
                thead 
                    tr 
                        th
                            input(type="checkbox" name="checkAll") 
                            label.ms-1 Chọn tất cả
                        th STT 
                        th Avatar 
                        th Họ và tên 
                        th Phân quyền
                        th Email 
                        th Trạng thái 
                        th Hành động
                tbody 
                    each item, index in records
                        tr
                            td
                                input(type="checkbox" name="id" value=item.id)
                            td #{index + 1}
                            td
                                img(
                                    src=item.avatar 
                                    alt=item.fullName 
                                    width="100px"
                                    height="auto"
                                )
                            td #{item.fullName}
                            td #{item.role.title}
                            td #{item.email}
                            td 
                                if (item.status === "active")
                                    a.badge.text-bg-success(
                                        href="javascript:;"
                                        data-id=item.id
                                        data-status=item.status
                                        button-change-status
                                    ) Hoạt động
                                else 
                                    a.badge.text-bg-danger(
                                        href="javascript:;"
                                        data-id=item.id
                                        data-status=item.status
                                        button-change-status
                                    ) Dừng hoạt động
                            td  
                                a.btn.btn-secondary.btn-sm(
                                    href=`${prefixAdmin}/accounts/detail/${item.id}`
                                ) Chi tiết
                                a.btn.btn-warning.btn-sm.ms-2(
                                    href=`${prefixAdmin}/accounts/edit/${item.id}`
                                ) Sửa
                                button.btn.btn-danger.btn-sm.ms-2(
                                    btn-delete
                                    data-id=item.id
                                ) Xóa

    form#form-delete-item(
        action="",
        method="POST"
        data-path=`${prefixAdmin}/accounts/delete`
        title="Bạn có muốn xóa tài khoản này?"
    ) 

    form#form-change-status(
        action="",
        method="POST"
        data-path=`${prefixAdmin}/accounts/change-status`
    )                       

    script(src="/admin/js/products.js")