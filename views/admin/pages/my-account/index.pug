extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main  
    +alert-success(2000)
    +alert-error(2000)

    h1.mb-4 Thông tin cá nhân

    if (user.avatar) 
        img.mb-3(
            src=user.avatar 
            alt=user.fullName
            width="150px"
        )
    else 
        img.mb-3(
            src="/images/avatar.png"
            width="150px"
        )
    if (user.fullName)
        p Họ và tên: <b>#{user.fullName}</b>
    if (user.email)
        p Email <b>#{user.email}</b>
    if (user.phone)
        p Số điện thoại <b>#{user.phone}</b>

    p
        span Trạng thái: 
        span    
            <b>#{user.status === "active" ? "Hoạt động" : "Dừng hoạt động"}</b>

    if (role.title)
        p Phân quyền: <b>#{role.title}</b>

    a.btn.btn-primary(
        href=`${prefixAdmin}/my-account/edit`
    ) Chỉnh sửa thông tin
